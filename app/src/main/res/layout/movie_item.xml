<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="6dp"
android:layout_marginBottom="17dp">
    <ImageView
        android:backgroundTint="#52616b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/movieLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient"
        tools:src="@mipmap/ic_launcher"

        />

    <TextView
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#1B213A"
        android:background="#00FFFFFF"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/movieLogo"
        app:layout_constraintEnd_toEndOf="@+id/movieLogo"
        app:layout_constraintTop_toBottomOf="@+id/movieLogo"
        android:id="@+id/movieName"/>


</androidx.constraintlayout.widget.ConstraintLayout>